    private void probCatchTextActionPerformed(java.awt.event.ActionEvent evt) {                                              

    }                                             

    private void startButtonActionPerformed(java.awt.event.ActionEvent evt) {                                            

        Thread t = new Thread(new Runnable() {
        double prob = Double.parseDouble(probCatchText.getText());
            
            @Override
            public void run() {
                while(fire.getNoTwo() == false){
                    fire.probCatch(prob);
                    countLabel.setText("COUNT: " + fire.getCount());
                }
                countLabel.setText("COUNT: " + (fire.getCount()-1));
            }
        });
        t.start();

    }                                           

    private void probTreeTextActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
    }                                            

    private void setButtonActionPerformed(java.awt.event.ActionEvent evt) {                                          
        double probTree = Double.parseDouble(probTreeText.getText());
        double probBurn = Double.parseDouble(probBurnText.getText());
        forest = new Forest(100, probTree, probBurn);
        rect.reSimulator(forest.getForest());
    }                                         

    private void stepButtonActionPerformed(java.awt.event.ActionEvent evt) {                                           
        Thread t = new Thread(new Runnable() {
        double prob = Double.parseDouble(probCatchText.getText());

            @Override
            public void run() {
                if(fire.getNoTwo() == true) {
                    //
                }else{
                    fire.stepByStep(prob);
                    countLabel.setText("COUNT: " + fire.getCount());
                }
            }
        });
        t.start();
    }                                          

    private void resetButtonActionPerformed(java.awt.event.ActionEvent evt) {                                            
        forest.reset();
        fire.reset();
        countLabel.setText("COUNT: " + fire.getCount());
    }                                           

    private void helpButtonMouseClicked(java.awt.event.MouseEvent evt) {                                        
        JOptionPane.showMessageDialog(null, "                                                               Introduction for the word in program \n"
                                                  + "'ProbCatch' : Probability of tree that fire can spread to the N/S/E/W side of tree (Probability between 0-1) \n"
                                                  + "'ProbTree' : Probability of tree that grow on the field (Probability between 0-1) \n"
                                                  + "'ProbBurn' : Probability of fire that start on the first time spreading in the field(Probability between 0-1) \n\n"
                                                  + "                                                       5 Steps to use the program (Automatic mode) \n"
                                                  + "1. Set ProbCatch, Probtree, and ProbBurn \n"
                                                  + "2. Press 'Set' will show you how about the field in the first time. \n"
                                                  + "3. Press 'Start' and the simulator will show you how fire spread on the field. \n"
                                                  + "4. After simulation stop, Press 'Stop' to stop the program. \n"
                                                  + "5. If you want to simulate again, Press 'Reset' to clear your field first. Otherwise, you can't simulate it again. \n\n"
                                                  + "                                                     5 Steps to use the program (Step by step mode) \n"
                                                  + "1. Set ProbCatch, Probtree, and ProbBurn \n"
                                                  + "2. Press 'Set' will show you how about the field in the first time. \n"
                                                  + "3. Press 'Step' and the simulator will show you how fire spread on the field 'step by step'. \n"
                                                  + "4. After simulation stop, Press 'Stop' to stop the program. \n"
                                                  + "5. If you want to simulate again, Press 'Reset' to clear your field first. Otherwise, you can't simulate it again.",
                                    "Help", 3);
    }                                       

