    private void startButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_startButtonActionPerformed

        Thread t = new Thread(new Runnable() {
        double prob = Double.parseDouble(probCatchText.getText());
            
            @Override
            public void run() {
                countLabel.setText("COUNT: " + (fire.getCount()+1));
                while(fire.getNoTwo() == false){
                    fire.probCatch(prob);
                    countLabel.setText("COUNT: " + (fire.getCount()+1));
                }
                countLabel.setText("COUNT: " + (fire.getCount()));
            }
        });
        t.start();
        
        startButton.setEnabled(false);
        stepButton.setEnabled(false);
        stopButton.setEnabled(true);
        resetButton.setEnabled(true);

    }//GEN-LAST:event_startButtonActionPerformed

    private void probTreeTextActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_probTreeTextActionPerformed
        // TODO add your handling code here:
    }//GEN-LAST:event_probTreeTextActionPerformed

    private void setButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_setButtonActionPerformed
        double probTree = Double.parseDouble(probTreeText.getText());
        double probBurn = Double.parseDouble(probBurnText.getText());
        forest = new Forest(forest.getSize(), probTree, probBurn);
        rect.reSimulator(forest.getForest());
        
        startButton.setEnabled(true);
        stepButton.setEnabled(true);
        setButton.setEnabled(false);
        probTreeText.setEnabled(false);
        probCatchText.setEnabled(false);
        probBurnText.setEnabled(false);
        sizeButton.setEnabled(false);
    }//GEN-LAST:event_setButtonActionPerformed

    private void stepButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_stepButtonActionPerformed
        Thread t = new Thread(new Runnable() {
        double prob = Double.parseDouble(probCatchText.getText());

            @Override
            public void run() {
                if(fire.getNoTwo() == true) {
                    //
                }else{
                    fire.stepByStep(prob);
                    countLabel.setText("COUNT: " + fire.getCount());
                }
            }
        });
        t.start();
        
        startButton.setEnabled(false);
        resetButton.setEnabled(true);
    }//GEN-LAST:event_stepButtonActionPerformed

    private void resetButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_resetButtonActionPerformed
             
        forest.reDefault();
        fire.reDefault();
        countLabel.setText("COUNT: " + fire.getCount());
        delayText.setText(">> SetDelay: 500 ms. <<");
        delaySetSlide.setValue(500);
        
        probTreeText.setEnabled(true);
        probCatchText.setEnabled(true);
        probBurnText.setEnabled(true);
        sizeButton.setEnabled(true);
        
        setButton.setEnabled(true);
        startButton.setEnabled(false);
        stepButton.setEnabled(false);
        stopButton.setEnabled(false);
        resetButton.setEnabled(false);
    }//GEN-LAST:event_resetButtonActionPerformed

    private void helpButtonMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_helpButtonMouseClicked
        JOptionPane.showMessageDialog(null, "                                                               Introduction for the word in program \n"
                                                  + "'ProbCatch' : Probability of tree that fire can spread to the N/S/E/W side of tree (Probability between 0-1) \n"
                                                  + "'ProbTree' : Probability of tree that grow on the field (Probability between 0-1) \n"
                                                  + "'ProbBurn' : Probability of fire that start on the first time spreading in the field(Probability between 0-1) \n\n"
                                                  + "                                                       5 Steps to use the program (Automatic mode) \n"
                                                  + "1. Set ProbCatch, Probtree, and ProbBurn \n"
                                                  + "2. Press 'Set' will show you how about the field in the first time. \n"
                                                  + "3. Press 'Start' and the simulator will show you how fire spread on the field. \n"
                                                  + "4. After simulation stop, Press 'Stop' to stop the program. \n"
                                                  + "5. If you want to simulate again, Press 'Reset' to clear your field first. Otherwise, you can't simulate it again. \n\n"
                                                  + "                                                     5 Steps to use the program (Step by step mode) \n"
                                                  + "1. Set ProbCatch, Probtree, and ProbBurn \n"
                                                  + "2. Press 'Set' will show you how about the field in the first time. \n"
                                                  + "3. Press 'Step' and the simulator will show you how fire spread on the field 'step by step'. \n"
                                                  + "4. After simulation stop, Press 'Stop' to stop the program. \n"
                                                  + "5. If you want to simulate again, Press 'Reset' to clear your field first. Otherwise, you can't simulate it again.",
                                    "Help", 3);
    }//GEN-LAST:event_helpButtonMouseClicked

    private void sizeButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_sizeButtonActionPerformed
        if(sizeButton.getModel().getSelectedItem().equals("Small")) {
            size = 20;
        }
        else if(sizeButton.getModel().getSelectedItem().equals("Medium")) {
            size = 25;
        }
        else if(sizeButton.getModel().getSelectedItem().equals("Large")) {
            size = 50;
        }
        else if(sizeButton.getModel().getSelectedItem().equals("Huge")) {
            size = 100;
        }
        
        forest = new Forest(size);
        rect.setSize(size);
        rect.reSimulator(forest.getForest());

    }//GEN-LAST:event_sizeButtonActionPerformed

    private void stopButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_stopButtonActionPerformed
        fire.stop();
        stopButton.setEnabled(false);
    }//GEN-LAST:event_stopButtonActionPerformed

    
    
