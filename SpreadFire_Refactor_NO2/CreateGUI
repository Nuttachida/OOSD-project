    public CreateGUI() {
        forest = new Forest(100);
        rect = new RectsJPanel(forest.getForest(),100);
        add(rect);
        fire = new Fire(forest);
        initComponents();
        delaySet();
        setLocation(310,100);
        setTitle("Simulator - Speading of Fire BY GROUP 13");
        
        probTreeText.setEnabled(true);
        probCatchText.setEnabled(true);
        probBurnText.setEnabled(true);
        sizeButton.setEnabled(true);
        delaySetSlide.setEnabled(true);
        
        setButton.setEnabled(true);
        startButton.setEnabled(false);
        stepButton.setEnabled(false);
        stopButton.setEnabled(false);
        resetButton.setEnabled(false);
    }
    
    public void delaySet(){
        delaySetSlide.addChangeListener(new ChangeListener() {

            @Override
            public void stateChanged(ChangeEvent e) {
                   delayText.setText(">> SetDelay: " + String.valueOf(delaySetSlide.getValue())+" ms. <<");
                   fire.setDelay(delaySetSlide.getValue());
            }
        });
    }

